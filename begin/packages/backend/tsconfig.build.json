{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@dddforum/shared/src/*": ["../shared/dist/*"]
      },
      "types": ["node"]
    },
    "include": ["./src/**/*"],
    "exclude": [
      "**/*.e2e.ts",
