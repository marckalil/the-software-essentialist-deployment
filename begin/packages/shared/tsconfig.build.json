{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.unit.ts",
    "**/__tests__/**"
  ],
  "include": ["src/**/*"]
}
