{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "strict": true,
    "esModuleInterop": true,
    "types": [],
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "@dddforum/backend/*": ["./packages/backend/*"],
      "@dddforum/frontend/*": ["./packages/frontend/*"],
      "@dddforum/shared/*": ["./packages/shared/*"]
    }

  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.infra.ts",
    "**/*.test.ts",
    "**/*.unit.ts",
    "**/*.e2e.ts"
  ]
}